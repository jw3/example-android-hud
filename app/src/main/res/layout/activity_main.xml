<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <fragment
            android:layout_width="123"
            android:layout_height="123" android:name="com.github.jw3.examplehud.CamView"
            android:id="@+id/cam2"
            app:layout_constraintTop_toBottomOf="@+id/tracker2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginTop="32dp"/>
    <fragment
            android:layout_width="123"
            android:layout_height="123" android:name="com.github.jw3.examplehud.MapView"
            android:id="@+id/tracker1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <fragment
            android:layout_width="123"
            android:layout_height="123" android:name="com.github.jw3.examplehud.CamView"
            android:id="@+id/cam1" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/cam2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <fragment
            android:layout_width="123"
            android:layout_height="123" android:name="com.github.jw3.examplehud.MapView"
            android:id="@+id/tracker2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tracker1"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>